<% provide(:title, @user.username) %>
<div class="col-md-3">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
        <%= @user.first_name %>
        <%= @user.last_name %>
        <%= @user.email %>
      </h1>
    </section>
  </aside>
</div>

<div class="col-md-9">
  <% if @user.posts.any? %>
    <h3>Posts (<%= @user.posts.count %>)</h3>
    <ol class="posts">
      <%= render @posts %>
    </ol>
    <%= will_paginate @posts %>
  <% end %>
</div>

